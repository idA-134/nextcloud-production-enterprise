# ===========================================
# NEXTCLOUD PRODUCTION CONFIGURATION
# EXAMPLE / TEMPLATE FILE
# ===========================================
# 
# WICHTIG: Kopieren Sie diese Datei zu '.env' und ändern Sie alle Werte!
# cp .env.example .env

# -----------------------------------------
# DOMAIN & SSL KONFIGURATION
# -----------------------------------------
NEXTCLOUD_DOMAIN=cloud.ihre-firma.de
LETSENCRYPT_EMAIL=admin@ihre-firma.de

# -----------------------------------------
# DATENBANK KONFIGURATION (PostgreSQL)
# -----------------------------------------
POSTGRES_DB=nextcloud_production
POSTGRES_USER=nextcloud_admin
POSTGRES_PASSWORD=IHR_SICHERES_DB_PASSWORT_HIER

# -----------------------------------------
# REDIS CACHE KONFIGURATION
# -----------------------------------------
REDIS_PASSWORD=IHR_SICHERES_REDIS_PASSWORT_HIER

# -----------------------------------------
# NEXTCLOUD ADMIN ZUGANGSDATEN
# -----------------------------------------
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=IHR_SICHERES_ADMIN_PASSWORT_HIER

# -----------------------------------------
# ONLYOFFICE KONFIGURATION
# -----------------------------------------
ONLYOFFICE_JWT_SECRET=IHR_ZUFAELLIGER_JWT_SECRET_32_ZEICHEN_ODER_MEHR

# -----------------------------------------
# TURN/STUN SERVER (für Nextcloud Talk)
# -----------------------------------------
TURN_SECRET=IHR_ZUFAELLIGER_TURN_SECRET_HIER
TURN_USER=nextcloud
TURN_PASSWORD=IHR_SICHERES_TURN_PASSWORT_HIER

# -----------------------------------------
# BACKUP KONFIGURATION
# -----------------------------------------
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# -----------------------------------------
# PERFORMANCE & LIMITS
# -----------------------------------------
MAX_UPLOAD_SIZE=20480
PHP_MEMORY_LIMIT=2G

# -----------------------------------------
# MONITORING & LOGGING
# -----------------------------------------
LOG_LEVEL=warning
TZ=Europe/Berlin

# -----------------------------------------
# SICHERHEIT
# -----------------------------------------
TRUSTED_PROXIES=

# -----------------------------------------
# ERWEITERTE OPTIONEN
# -----------------------------------------
ENABLE_BACKUP=true
ENABLE_MONITORING=true
ENABLE_ONLYOFFICE=true
ENABLE_TALK=true
EXTERNAL_IP=
